# =============================================================================
# ECHO - AI Stock Prediction System Configuration
# =============================================================================

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/echo.db
REDIS_URL=redis://localhost:6379/0

# API Keys - LLMs (Get free API keys from these providers)
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
TOGETHER_API_KEY=your_together_api_key_here

# Stock Market Data APIs (Free tiers available)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# News APIs (Optional - enhances scraping)
NEWS_API_KEY=your_newsapi_key_here
NEWSDATA_API_KEY=your_newsdata_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Prediction Settings
MIN_CONFIDENCE_THRESHOLD=0.75
TARGET_RETURN_PERCENT=7.0
MAX_INVESTMENT_PER_PREDICTION=1000.0
RISK_TOLERANCE=medium

# Self-Improvement Settings
ENABLE_AUTO_TUNING=true
BACKTESTING_LOOKBACK_DAYS=365
PREDICTION_REVIEW_INTERVAL_HOURS=24

# Scraping Settings
SCRAPE_INTERVAL_MINUTES=30
MAX_CONCURRENT_SCRAPERS=5
NEWS_SOURCES=reuters,bloomberg,cnbc,wsj,ft,yahoo_finance,marketwatch

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
